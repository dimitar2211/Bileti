@model Bileti.Models.Concert

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1, h4 {
        color: #1db954;
        margin-top: 20px;
    }

    hr {
        border-color: #1db954;
        margin-bottom: 25px;
    }

    dl.row {
        background-color: #1e1e1e;
        border: 1px solid #1db954;
        border-radius: 12px;
        padding: 20px;
        max-width: 480px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
        margin-bottom: 25px;
    }

    dt {
        color: #1ed760;
        font-weight: 700;
        margin-top: 10px;
    }

    dd {
        color: #ddd;
        margin-left: 0;
        padding-left: 0;
        margin-bottom: 10px;
    }

    a {
        color: #1db954;
        font-weight: 600;
        text-decoration: none;
        font-size: 1rem;
        margin-right: 15px;
    }

        a:hover {
            text-decoration: underline;
        }

    .container-details {
        max-width: 520px;
        margin-top: 40px;
    }

    .action-buttons {
        margin-top: 20px;
    }
</style>

<div class="container container-details">
    <h1>Details</h1>

    <h4>Concert</h4>
    <hr />
    <dl class="row">
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Location</dt>
        <dd>@Model.Location</dd>

        <dt>Start Date</dt>
        <dd>@Model.StartDate.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt>End Date</dt>
        <dd>@Model.EndDate.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt>Available Tickets</dt>
        <dd>
            @if (Model.AvailableTickets > 0)
            {
                @Model.AvailableTickets
            }
            else
            {
                <span style="color: #ff4d4d; font-weight: bold;">Sold out</span>
            }
        </dd>
    </dl>

    <div class="action-buttons">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
        }
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@model Bileti.Models.Concert

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1, h3, h4 {
        color: #1db954;
        margin-top: 20px;
    }

    hr {
        border-color: #1db954;
        margin-bottom: 25px;
    }

    dl.row {
        background-color: #1e1e1e;
        border: 1px solid #1db954;
        border-radius: 12px;
        padding: 20px;
        max-width: 480px;
        margin-bottom: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }

    dt.col-sm-2 {
        color: #1ed760;
        font-weight: 700;
    }

    dd.col-sm-10 {
        margin-left: 0;
        padding-left: 10px;
        color: #ddd;
    }

    form {
        max-width: 480px;
    }

    .btn-danger {
        background-color: #1db954; /* зелен вместо червен */
        border-color: #1db954;
        color: #000;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-right: 10px;
        border: none;
    }

        .btn-danger:hover {
            background-color: #1ed760;
            border-color: #1ed760;
            color: #000;
        }

    a {
        color: #1db954;
        font-weight: 600;
        text-decoration: none;
        font-size: 1rem;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="container container-form" style="max-width: 520px; margin-top: 40px;">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>

    <h4>Concert</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableTickets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableTickets)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>

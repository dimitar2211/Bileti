@model List<string>

@{
    ViewData["Title"] = "Songs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #1DB954;
        margin-bottom: 1rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    form {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2rem;
    }

    input[name="spotifyLink"] {
        flex-grow: 1;
        padding: 0.5rem 1rem;
        border-radius: 30px;
        border: none;
        font-size: 1rem;
        background-color: #282828;
        color: white;
        outline: none;
        transition: background-color 0.3s ease;
    }

        input[name="spotifyLink"]:focus {
            background-color: #333;
        }

    button[type="submit"] {
        background-color: #1DB954;
        border: none;
        color: black;
        font-weight: 700;
        padding: 0 1.5rem;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button[type="submit"]:hover {
            background-color: #1ed760;
        }

    .songs-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .song-card {
        background-color: #282828;
        border-radius: 12px;
        padding: 1rem;
        width: 500px; /* увеличена ширина */
        box-shadow: 0 4px 15px rgba(29, 185, 84, 0.5);
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    iframe.spotify-player {
        width: 480px; /* увеличена ширина */
        height: 80px;
        border-radius: 12px;
        box-shadow: 0 0 20px #1DB954;
        margin-bottom: 1rem;
    }

    .btn-delete {
        background-color: #e02424;
        border: none;
        color: white;
        font-weight: 700;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        position: absolute;
        top: 10px;
        right: 10px;
        user-select: none;
    }

        .btn-delete:hover {
            background-color: #ff4444;
        }

    .no-songs-message {
        font-size: 1.1rem;
        color: #aaa;
        margin-top: 2rem;
    }
</style>

<h2>Добави Spotify песен</h2>

<form method="post" asp-action="AddSong" asp-controller="Songs" autocomplete="off">
    <input type="text" name="spotifyLink" placeholder="Постави Spotify линк" />
    <button type="submit">Добави</button>
</form>

@if (!Model.Any())
{
    <p class="no-songs-message">Няма добавени песни.</p>
}
else
{
    <div class="songs-container">
        @foreach (var trackId in Model)
        {
            <div class="song-card">
                <iframe class="spotify-player" frameborder="0" allowtransparency="true" allow="encrypted-media"
                        src="https://open.spotify.com/embed/track/@trackId"></iframe>

                <form method="post" asp-action="DeleteSong" asp-controller="Songs" style="margin:0;">
                    <input type="hidden" name="spotifyTrackId" value="@trackId" />
                    <button type="submit" class="btn-delete">Изтрий</button>
                </form>
            </div>
        }
    </div>
}

